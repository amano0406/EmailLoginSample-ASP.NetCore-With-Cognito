@page
@model TheMyAsk.Web.Pages.Account.ResetPasswordConfirm
@{
    ViewData["Title"] = "ResetPasswordConfirm";
}
<style type="text/css">
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
    }

    input[type="number"] {
        -moz-appearance: textfield;
    }
</style>
<div class="container">
    <div class="row" style="margin-top:30px;">
        <div class="col-lg"></div>
        <div class="col-lg">
            <form method="post">
                <div class="card mb-3">
                    <article class="card-body">
                        <h4 class="card-title">ResetPasswordConfirm</h4>
                        <hr>
                        @if (!this.Model.Request.Query.ContainsKey("mailaddress"))
                        {
                            <div class="form-group">
                                <label asp-for="Input.MailAddress" class="control-label">MailAddress</label>
                                <input asp-for="Input.MailAddress" type="email" class="form-control form-control-sm" placeholder="sample@themyask.com" />
                                <span asp-validation-for="Input.MailAddress" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            <input asp-for="Input.MailAddress" type="hidden" />
                        }
                        <div class="form-group">
                            <label asp-for="Input.NewPassword" class="control-label">NewPassword</label>
                            <input asp-for="Input.NewPassword" type="password" class="form-control form-control-sm" placeholder="9&5jMcC8ez" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword" class="control-label">ConfirmPassword</label>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-sm" placeholder="9&5jMcC8ez" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Code" class="control-label">Code</label>
                            <input asp-for="Input.Code" type="number" class="form-control form-control-sm" placeholder="999999" />
                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-0">
                            <input type="submit" asp-action="Confirm" value="Send" class="btn btn-sm btn-primary btn-block">
                        </div>
                    </article>
                </div>
                <div class="card mb-3">
                    <article class="card-body">
                        <div class="form-group mb-0">
                            <input type="submit" asp-action="ReSend" value="確認コードの再送信" class="btn btn-sm btn-primary btn-block">
                        </div>
                    </article>
                </div>
            </form>
        </div>
        <div class="col-lg"></div>
    </div>
</div>