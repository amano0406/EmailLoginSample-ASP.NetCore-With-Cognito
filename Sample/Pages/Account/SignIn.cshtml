@page
@model TheMyAsk.Web.Pages.Account.SignIn
@{
    ViewData["Title"] = "SignIn";
}
<div class="container">
    <div class="row" style="margin-top:30px;">
        <div class="col-lg"></div>
        <div class="col-lg">
            <div class="card mb-3">
                <article class="card-body">
                    <h4 class="card-title">SignIn</h4>
                    <hr>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Input.MailAddress" class="control-label">MailAddress</label>
                            <input asp-for="Input.MailAddress" type="email" class="form-control form-control-sm" placeholder="sample@themyask.com" />
                            <span asp-validation-for="Input.MailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" class="control-label">Password</label>
                            <input asp-for="Input.Password" type="password" class="form-control form-control-sm" placeholder="9&5jMcC8ez" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    RememberMe
                                </label>
                            </div>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-0">
                            <input type="submit" value="Send" class="btn btn-sm btn-primary btn-block">
                        </div>
                        <p>
                            <a asp-area="" asp-page="ResetPassword">Forgot Password</a>
                        </p>
                    </form>
                </article>
            </div>
        </div>
        <div class="col-lg"></div>
    </div>
</div>
